# -*- mode: conf -*-

[general]
accounts = Personal
ui = basic

[Account Personal]
localrepository = LocalDefault
remoterepository = RemoteDefault

[Repository LocalDefault]
type = Maildir
localfolders = {{ output "sh" "-c" "pass msmtp/default_home" | trim }}

[Repository RemoteDefault]
type = IMAP
remotehost =     {{ output "sh" "-c" "pass msmtp/default_host" | trim }}
remoteuser =     {{ output "sh" "-c" "pass msmtp/default_user" | trim }}
remoteport =     {{ output "sh" "-c" "pass msmtp/default_imap_port" | trim }}
remotepassfile = {{ output "sh" "-c" "pass msmtp/default_home" | trim }}/.imap_pass
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
