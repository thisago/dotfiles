{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "proxy/gpt-4.1-2025-04-14",
  "autoupdate": false,
  "share": "manual",
  "instructions": [
    "./conventions.md"
  ],
  "keybinds": {
    "messages_next": "alt+n",
    "messages_previous": "alt+p",
    "leader": "ctrl+x"
  },
  "experimental": {},
  "autoshare": false,
  "provider": {
    "proxy": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "apiKey": "{env:OPENAI_API_KEY}",
        "baseURL": "{env:OPENAI_API_BASE}"
      },
      "models": {
        "gpt-4.1-2025-04-14": {},
        "claude-3.7-sonnet-thought": {},
        "gpt-5": {},
        "gpt-5-mini": {}
      }
    }
  },
  "mcp": {
    "tmux": {
      "enabled": true,
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "tmux-mcp"
      ]
    },
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": [
        "# Not working",
        "bunx",
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "jira": {
      "enabled": true,
      "type": "local",
      "command": [
        "/home/user/go/bin/jira-mcp"
      ],
      "environment": {
        "ATLASSIAN_HOST": "{env:JIRA_MCP_ATLASSIAN_HOST}",
        "ATLASSIAN_EMAIL": "{env:JIRA_MCP_ATLASSIAN_EMAIL}",
        "ATLASSIAN_TOKEN": "{env:JIRA_MCP_ATLASSIAN_TOKEN}"
      }
    },
    "mongodb-lens-{env:MONGODB_LENS_MCP_NAME}": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mongodb-lens@latest",
        "{env:MONGODB_LENS_MCP_URI}"
      ]
    }
  }
}
